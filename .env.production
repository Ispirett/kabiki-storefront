# Your production publishable key (get this from your Medusa Admin)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_d9d45ede544267e985db7f2be850ace692ce682b8cc19688ef05f3a98322d84b

# Your storefront production URL
NEXT_PUBLIC_BASE_URL=https://your-storefront-domain.com

